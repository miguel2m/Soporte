<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:weightSum="4"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/icons_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary2"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:text="+58(212)278.5911" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/icons_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button


            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary2"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:text="soporte@ip-network.net" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/icons_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/facebook"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#433e90"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:text="Facebook" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView

            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/icons_twitter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/twitter"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#326ada"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:text="Twitter" />


    </LinearLayout>



</android.support.v7.widget.LinearLayoutCompat>